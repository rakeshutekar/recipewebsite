    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Recipe Repo</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link href="https://fonts.googleapis.com/css?family=Yellowtail&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Nunito&display=swap" rel="stylesheet">
    </head>

    <body>

        <!-- header -->
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-navbar border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-page="/Index"><img src="https://drive.google.com/uc?export=view&id=1Zxg2FcXM3eBBCzLTSTa1wERouvu8yJW8" alt="Recipe Repo" style="height: 150px;"></a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">

                        <ul class="navbar-nav flex-grow-1">

                            @*<li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Recipes/Index">Recipes</a>
        </li>*@

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Recipes
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="/Recipes/Search?Tags=Breakfast">Breakfast</a>
                                    <a class="dropdown-item" href="/Recipes/Search?Tags=Lunch">Lunch</a>
                                    <a class="dropdown-item" href="/Recipes/Search?Tags=Healthy">Healthy</a>
                                    <a class="dropdown-item" href="/Recipes/Search?Tags=Appetizers">Appetizers</a>
                                    <a class="dropdown-item" href="/Recipes/Search?Tags=Salad">Salads</a>
                                    <a class="dropdown-item" href="/Recipes/Search?Tags=Soup">Soups</a>
                                    <a class="dropdown-item" href="/Recipes/Search?tags=Bread">Bread</a>

                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item view-all" href="/Recipes/Index">View All</a>
                                </div>
                            </li>


                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Recipes/Create">Submit Recipe</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/About">About Us</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Create a container with Flexbox to align items -->
                <div class="d-flex align-items-center">

                    <!-- search bar -->
                    <form class="form-inline my-2 my-lg-0 mr-auto" method="get" action="/Recipes/Search">
                        <input class="form-control mr-sm-2" type="search" placeholder="Find A Recipe" aria-label="Search" name="query">
                    </form>

                    <!-- Account Dropdown Menu -->
                    <div class="dropdown ml-auto">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-user"></i>
                        </button>

                        <!-- Add the dropdown menu items -->
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="#">Sign In</a>
                            <a class="dropdown-item" href="#">Sign Out</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Forgot Password</a>
                        </div>
                    </div>
                </div>

            </nav>
        </header>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <!-- new footer -->
        <footer style="background-color: #cad2c5; position: fixed; bottom: 0; width: 100%; ">
            <div class="container p-3 pb-0">

                <!-- Section: sign up -->
                <section class="">
                    <p class="d-flex justify-content-center align-items-center">
                        <span class="me-3 px-3" style="font-weight: bold;">Register for free</span>
                        <button type="button" class="btn btn-outline-dark btn-rounded" style="background-color: #84a98c">
                            Sign up
                        </button>
                    </p>
                </section>
                <!-- Section: sign up -->
                <!-- Section: Text -->
                <section class="mb-4">
                    <p class="text-center">
                        Want to learn cook but confused how to start? <br />
                        No need to worry again! Let's start cooking with Recipe Repo!
                    </p>
                </section>
                <!-- Section: Text -->

            </div>

            <div class="text-center p-2" style="background-color: #84a98c;">
                &copy; 2023 <a class="text-dark" href="/" style="text-decoration: none;">Recipe Repo</a>
                <a asp-area="" asp-page="/Privacy">Privacy</a>

            </div>
        </footer>

        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        @RenderSection("Scripts", required: false)
    </body>
    </html>
